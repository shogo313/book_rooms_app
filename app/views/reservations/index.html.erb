<div class="reservations_index_container">
  <h2 class="heading">予約一覧</h2>
  <p><%= "#{@reservations.count}件" %></p>
  <% @reservations.each do |reservation| %>
    <div class="reservation">
      <div class="reservation_image_container">
        <% if reservation.room.image.attached? %>
          <%= image_tag reservation.room.image, class:"reservation_image"%>
        <% else %>
          <%= image_tag 'default-image-room.png', :alt => '宿のデフォルト画像', class: "reservation_image" %>
        <% end %>
      </div>
      <table class="reservation_text">
        <tr>
          <th>宿名</th>
          <td><%= reservation.room.name %></td>
        </tr>
        <tr>
          <th>紹介文</th>
          <td><%= reservation.room.introduction %></td>
        </tr>
        <tr>
          <th>チェックイン</th>
          <td><%= l reservation.check_in_date, format: :date %></td>
        </tr>
        <tr>
          <th>チェックアウト</th>
          <td><%= l reservation.check_out_date, format: :date %></td>
        </tr>
        <tr>
          <th>宿泊合計料金</th>
          <td><%= "#{reservation.payment_amount}円" %></td>
        </tr>
        <tr>
          <th>予約確定時刻</th>
          <td><%= l reservation.created_at, format: :date_and_time %></td>
        </tr>
      </table>
    </div>
  <% end %>
</div>
