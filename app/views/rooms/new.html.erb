<h3>宿の新規登録</h3>

<%= render "shared/error", obj:@room %>

<%= form_with model: @room do |f| %>
<table>
  <tr>
    <th><%= f.label :name ,"宿名" %></th>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <th><%= f.label :address ,"住所" %></th>
    <td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <th><%= f.label :charge_per_night ,"宿泊料金(/一泊)" %></th>
    <td><%= f.text_field :charge_per_night %>円</td>
  </tr>
  
  <tr>
    <th><%= f.label :detail ,"詳細" %></th>
    <td><%= f.text_area :detail %></td>
    <td>1000文字以内</td>
  </tr>
  
  <tr>
    <th><%= f.label :introduction ,"紹介文" %></th>
    <td><%= f.text_area :introduction %></td>
    <td>50文字以内</td>
  </tr>
  <tr>
    <th><%= f.label :image ,"画像" %></th>
    <td><%= f.file_field :image %></td>
  </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録"%></li>
    </ul>
  </div>
<% end %>
<%= link_to "戻る", :back %>