
<div class="rooms_index_container">
  <h2 class="heading">登録宿一覧</h2>
  <p><%= "#{@rooms.count}件" %></p>
  <table class="room">
      <% @rooms.each do |room| %>
      <thead>
        <tr>
          <th>宿名</th>
          <th>登録画像</th>
          <th>宿泊料金(/一泊)</th>
          <th>紹介文</th>
          <th>作成日</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="room_name">
            <%= link_to truncate(room.name, length: 20), room_path(room.id), class: "link" %>
          </td>

          <td class="room_image_container">
            <% if room.image.attached? %>
              <%= image_tag room.image, class:"room_image"%>
            <% else %>
              <%= image_tag 'default-image-room.png', :alt => '宿のデフォルト画像', class: "room_image" %>
            <% end %>
          </td>

          <td class="room_chargePerNight">
            <%= "#{room.charge_per_night}円" %>
          </td>

          <td class="room_introduction">
            <%= truncate(room.introduction, length: 20) %>
          </td>

          <td class="room_createdAt">
            <%= l room.created_at, format: :date %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
</div>
